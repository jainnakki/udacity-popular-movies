<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_mi_large"
    card_view:cardCornerRadius="@dimen/radius_mi_large"
    card_view:cardUseCompatPadding="true">

    <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <ImageView
            android:id="@+id/movie_image"
            android:layout_width="@dimen/mi_poster_dimen"
            android:layout_height="@dimen/mi_poster_dimen"
            android:contentDescription="@string/movie_item_content_description"
            android:scaleType="centerCrop" />

    <TextView
            android:id="@+id/movie_title_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:paddingBottom="@dimen/padding_mi_large"
            android:paddingTop="@dimen/padding_mi_large"
            android:background="#4885ed"
            android:text="@string/placeholder_hello_world_text"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_mi_medium" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/height_mi_very_small"
            android:background="#ccc" />

        <TextView
            android:id="@+id/movie_popularity_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="78%"
            android:background="#4885ed"
            android:paddingBottom="@dimen/padding_mi_small"
            android:paddingTop="@dimen/padding_mi_small"
            android:textColor="#ffffff"
            android:textSize="@dimen/text_mi_small" />
    </LinearLayout>
</android.support.v7.widget.CardView>