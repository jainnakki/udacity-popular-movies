<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/movie_poster_height"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="@dimen/movie_poster_width"
                    android:layout_height="@dimen/movie_poster_height"
                    android:onClick="playVideo"
                    android:contentDescription="@string/movie_poster_content_desc"
                    android:padding="5dp" />

                <ImageView
                    android:id="@+id/video_preview_play_image"
                    android:layout_width="@dimen/preview_poster_width"
                    android:layout_height="@dimen/preview_poster_height"
                    android:contentDescription="@string/video_prev_play_content_desc"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:background="@drawable/video_preview_play_button" />

            </FrameLayout>


            <View
                android:layout_width="@dimen/line_width_height_val"
                android:layout_height="fill_parent"
                android:background="#ccc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/movie_details_left_margin"
                android:orientation="vertical"
                android:padding="@dimen/movie_details_padding">

                <TextView
                    android:id="@+id/movie_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="@string/heading_original_title"
                    android:textColor="#4885ed"
                    android:textSize="@dimen/movie_title_textsize"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_bottom_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/default_icon_size"
                        android:layout_height="@dimen/default_icon_size"
                        android:contentDescription="@string/movie_popularity_icon_desc"
                        android:background="@drawable/popularity1" />

                    <TextView
                        android:id="@+id/movie_popularity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_text_padding"
                        android:textColor="#333"
                        android:textSize="@dimen/normal_text_size" />

                    <TextView
                        android:id="@+id/movie_votes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/movie_votes_padding"
                        android:textColor="#666666"
                        android:textSize="@dimen/small_text_size" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_bottom_margin"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/default_icon_size"
                        android:layout_height="@dimen/default_icon_size"
                        android:contentDescription="@string/movie_rating_icon_desc"
                        android:background="@drawable/rating" />

                    <TextView
                        android:id="@+id/movie_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_text_padding"
                        android:textColor="#333"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_bottom_margin"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/movie_releaseDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/default_text_padding"
                        android:textColor="#333"
                        android:textSize="@dimen/normal_text_size"
                        android:textStyle="normal" />

                </LinearLayout>

                <TextView
                    android:id="@+id/movie_genre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/default_bottom_margin"
                    android:padding="@dimen/default_text_padding"
                    android:textColor="#666666"
                    android:textSize="@dimen/normal_text_size" />

                <ToggleButton
                    android:id="@+id/movie_favourite_button"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/default_icon_size"
                    android:layout_marginTop="3dp"
                    android:background="@drawable/rounded_corner"
                    android:textAlignment="center"
                    android:textOff="@string/mark_favourite_text"
                    android:textOn="@string/mark_unfavourite_text"
                    android:textSize="@dimen/medium_text_size" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_width_height_val"
            android:background="#ccc" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#f5f5f5"
            android:orientation="vertical"
            android:paddingLeft="1dp"
            android:paddingRight="1dp">

            <com.ms.square.android.expandabletextview.ExpandableTextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                android:id="@+id/expand_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                expandableTextView:animDuration="200"
                expandableTextView:maxCollapsedLines="3">

                <TextView
                    android:id="@id/expandable_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="0dp"
                    android:layout_marginTop="5dp"
                    android:padding="@dimen/default_text_padding"
                    android:textColor="#666666"
                    android:textSize="@dimen/movie_overview_text_size" />

                <ImageButton
                    android:id="@id/expand_collapse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/expand_collapse_image_button_desc"
                    android:layout_gravity="center|bottom"
                    android:background="@android:color/transparent"
                    android:padding="@dimen/collapse_image_button_padding" />
            </com.ms.square.android.expandabletextview.ExpandableTextView>

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/line_width_height_val"
            android:background="#ccc" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/review_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </LinearLayout>
</ScrollView>